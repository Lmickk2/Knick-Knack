        {{#each items as |item|}}
      <div class="product-card">
            <div class="product-card-thumbnail">
              <a href="#"><img src="/images/{{item.filename}}"/></a>
            </div>
            <h2 class="product-card-title"><a href="#">{{item.product_name}}</h2>
            <span class="product-card-desc">{{item.description}}</span>
            <span class="product-card-price">${{item.price}}</span>
          </div>
        {{/each}}